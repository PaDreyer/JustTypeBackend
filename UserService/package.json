{
  "name": "nodeTwo",
  "version": "1.0.0",
  "description": "My Moleculer microservices project",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --config moleculer.config.ts services/**/*.service.ts",
    "cli": "moleculer connect TCP",
    "start": "moleculer-runner services",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "eslint --ext .js,.ts .",
    "dc:up": "docker-compose up --build -d",
    "dc:down": "docker-compose down",
    "gen:broker:types": "ts-node src/gen.broker.types.ts"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "",
  "devDependencies": {
    "@types/bluebird": "^3.5.24",
    "@types/jest": "^23.1.1",
    "@types/mongoose": "^5.7.0",
    "@types/node": "^10.17.14",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-prefer-arrow": "^1.1.7",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "moleculer-repl": "^0.5.3",
    "prettier": "^1.19.1",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "ts-patch": "^1.0.5",
    "ts-transformer-enumerate": "^0.5.1",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express-jwt": "^5.3.1",
    "jsonwebtoken": "^8.5.1",
    "moleculer": "^0.13.12",
    "moleculer-db": "^0.8.4",
    "moleculer-db-adapter-mongoose": "^0.8.3",
    "moleculer-decorators": "^1.1.1",
    "moleculer-service-decorators": "^1.0.4",
    "moleculer-ts": "^2.0.5",
    "moleculer-web": "^0.8.0",
    "mongoose": "^5.8.10"
  },
  "engines": {
    "node": ">= 8.x.x"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}
